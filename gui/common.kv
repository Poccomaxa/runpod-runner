#:kivy 2.2.1

<CommonPopup@Popup>
    size_hint: None, None
    size: dp(500), dp(300)
    text: 'Text goes here'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.text
            text_size: self.width, None
            halign: 'center'
        Button:
            size_hint_y: None
            height: dp(50)
            text: 'Ok'
            on_press: root.dismiss()

<TextDropdown@Button>

<DropDownLine@ButtonBehavior+Label>
    size_hint: None, None
    size: self.texture_size

<FloatText@TextInput>
    multiline: False

<LabeledFloatText@BoxLayout>
    input_field: input_field
    allow_decimal: False
    orientation: 'horizontal'
    title: 'Title: '
    size: self.minimum_width, self.minimum_height
    size_hint: None, None
    Label:
        text: root.title
        size: self.texture_size
        size_hint: None, None
    FloatText:
        id: input_field
        size_hint:None, None
        size: dp(60), self.minimum_height
        allow_decimal: root.allow_decimal


<TextSlider@BoxLayout>
    title: 'Title:'
    min_value: 0
    max_value: 100
    value: 0

    #Exposing children
    slider: slider
    text_input: text_input

    orientation: 'horizontal'
    height: self.minimum_height
    size_hint_y: None
    AnchorLayout:
        size: dp(100), dp(30)
        size_hint: None, None
        anchor_x: 'right'
        Label:
            text: root.title
            size: self.texture_size
            size_hint: None, None
    Slider:
        id: slider
        cursor_size: dp(18), dp(18)
        value: root.value
        on_value: root.on_slider_value(self.value)
        min: root.min_value
        max: root.max_value
    FloatText:
        id: text_input
        multiline: False
        allow_decimal: True
        on_text: root.on_text_changed(self.text)
        size: dp(60), self.minimum_height
        size_hint: None, None

