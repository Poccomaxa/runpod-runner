#:kivy 2.2.1

<TextDropdown@Button>

<DropDownLine@ButtonBehavior+Label>
    size_hint: None, None
    size: self.texture_size

<FloatText@TextInput>
    multiline: False

<TextSlider@BoxLayout>
    title: 'Title:'
    min_value: 0
    max_value: 100
    value: 0

    #Exposing children
    slider: slider
    text_input: text_input

    orientation: 'horizontal'
    height: self.minimum_height
    size_hint_y: None
    AnchorLayout:
        size: 100, 30
        size_hint: None, None
        anchor_x: 'right'
        Label:
            text: root.title
            size: self.texture_size
            size_hint: None, None
    Slider:
        id: slider
        cursor_size: 18, 18
        value: root.value
        on_value: root.on_slider_value(self.value)
        min: root.min_value
        max: root.max_value
    FloatText:
        id: text_input
        multiline: False
        allow_decimal: True
        on_text: root.on_text_changed(self.text)
        size: 50, self.minimum_height
        size_hint: None, None

