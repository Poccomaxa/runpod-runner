#:kivy 2.2.1
#:include common.kv

<PromptsItem@ButtonBehavior+Label>
    selected: False
    size_hint: None, None
    size: self.texture_size
    color: selected_color if self.selected else default_color

<PromptsPanel@BoxLayout>
    orientation: 'horizontal'
    prompt_list: prompt_list
    ScrollView:
        StackLayout:
            spacing: 5
            orientation: 'tb-lr'
            id: prompt_list
    BoxLayout:
        size_hint_x: None
        width: 160
        orientation: 'vertical'
        Button:
            on_press: root.on_load_pressed()
            text: 'Load'


