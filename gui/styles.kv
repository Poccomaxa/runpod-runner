#:kivy 2.2.1
#:set selected_color (0.94, 0.8, 0.43, 1.)
#:set default_color (1., 1., 1., 1.)
#:set main_bkg_color (0.4, 0.4, 0.4, 1)
#:set panel_bkg_color (0.2, 0.2, 0.2, 1)
#:set logs_bkg_color (0.1, 0.1, 0.1, 1)

<Label>:
    font_name: "JetBrainsMono-Regular"
    color: default_color

<TextInput>:
    font_name: "JetBrainsMono-Regular"
    foreground_color: default_color
    background_color: panel_bkg_color

<AppBG@Widget>
    canvas.before:
        Color:
            rgba: main_bkg_color
        Rectangle:
            pos: self.pos
            size: self.size

<BasePanelBG@Widget>
    canvas.before:
        Color:
            rgba: panel_bkg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

<LogsScreenBG@Widget>
    canvas.before:
        Color:
            rgba: logs_bkg_color
        Rectangle:
            pos: self.pos
            size: self.size
