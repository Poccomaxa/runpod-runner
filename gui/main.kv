#:kivy 2.3.1
#:include common.kv
#:include generation.kv
#:include styles.kv

<LogsScreen>:
    logs: logs
    AnchorLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 5
        Label:
            id: logs
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            text: "Here\nBe\nText"
            font_size: 18
            valign: 'bottom'

<MainScreen>:
    generation_panel: generation_panel
    BoxLayout: 
        canvas.before:
            Color:
                rgba: 0.4, 0.4, 0.4, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: 3
        spacing: 3
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 3
            BasePanel:
                width: 200
            BasePanel:
                size_hint_x: None
                width: 200

        GenerationPanel:
            id: generation_panel

<AppRoot>:
    main_screen: main
    logs_screen: logs

    MainScreen:
        id: main
        name: "main"
    LogsScreen:
        id: logs
        name: "logs"