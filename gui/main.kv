#:kivy 2.2.1
#:include common.kv
#:include generation.kv
#:include styles.kv
#:include prompts.kv
#:include preview.kv
#:include settings.kv

<LogsPanel@AnchorLayout+LogsScreenBG>

<LogsScreen>:
    logs: logs
    LogsPanel:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 5
        Label:
            id: logs
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            text: "Here\nBe\nText"
            font_size: 18
            valign: 'bottom'

<MainPanel@BoxLayout+AppBG>

<MainScreen>:
    generation_panel: generation_panel
    preview_panel: preview_panel
    prompts_panel: prompts_panel
    tabbed_panel: tabbed_panel
    global_settings_panel: global_settings_panel

    MainPanel:
        orientation: 'vertical'
        padding: 3
        spacing: 3
        Preview:
            id: preview_panel
        TabbedPanel:
            id: tabbed_panel
            default_tab: generation_tab
            background_color: 1, 1, 1, 0
            size_hint_y: None
            height: 250
            TabbedPanelItem:
                id: generation_tab
                text: 'Generation'
                GenerationPanel:
                    id: generation_panel
            TabbedPanelItem:
                id: prompts_tab
                text: 'Prompts'
                PromptsPanel:
                    id: prompts_panel
            TabbedPanelItem:
                id: settings_tab
                text: 'Settings'
                GlobalSettingsPanel
                    id: global_settings_panel


<AppRoot>:
    main_screen: main
    logs_screen: logs

    MainScreen:
        id: main
        name: "main"
    LogsScreen:
        id: logs
        name: "logs"