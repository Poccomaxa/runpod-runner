#:kivy 2.2.1
#:include styles.kv

<ImagePreviewPanel@AnchorLayout+BasePanelBG>
<ImagesPanel@ScrollView+BasePanelBG>

<Thumbnail@BoxLayout>
    file_name: file_name
    image_thumb: image_thumb
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    Image:
        id: image_thumb
        fit_mode: 'contain'
        size_hint_y: None
        width: 200

    Label:
        id: file_name
        text: ''
        size_hint_y: None
        size: self.texture_size

<Preview@BoxLayout>:
    orientation: 'horizontal'
    spacing: 3
    file_list: file_list

    ImagePreviewPanel:
        ScatterLayout:
            Button:
                text:'sisi'
                size_hint: None, None
                size: 300, 100
            Button:
                text: 'pipi'
                size_hint: None, None
                size: 100, 300
    ImagesPanel:
        size_hint_x: None
        width: 200
        BoxLayout:
            id: file_list
            orientation: 'vertical'

