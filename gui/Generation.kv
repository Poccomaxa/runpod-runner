#:kivy 2.3.1
#:include Common.kv

<GenerationPanel@StyledBoxLayout>
    size_hint_y: None
    height: 200
    cfg_slider: cfg_slider
    steps_slider: steps_slider
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: 'Prompt'
        TextInput:
    StackLayout:
        TextSlider:
            id: steps_slider
            title: "Steps:"
            min_value: 1
            max_value: 40
            value: 20
        TextSlider:
            id: cfg_slider
            title: "Cfg scale:"
            min_value: 1
            max_value: 20
            value: 4.5
        TextInput: #width
            height: self.minimum_height
            size_hint: None, None
            text: 'width'
        TextInput: #height
            height: self.minimum_height
            size_hint: None, None
            text: 'height'
        CheckBox: #enable hi res
            height: 40
            size_hint: None, None
            text: 'height'
        TextInput: #hr scale
            height: self.minimum_height
            size_hint: None, None
            text: 'hr scale'

    Button:
        size_hint_x: None
        width: 200

        on_release: root.on_generate_press()
        Label:
            text: 'Generate'
