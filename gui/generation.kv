#:kivy 2.2.1
#:include common.kv
#:include styles.kv

<DropDownPanel@BoxLayout+BasePanelBG>
    orientation: vertical


<GenerationPanel@BoxLayout+BasePanelBG>
    #Exposing widgets
    cfg_slider: cfg_slider
    steps_slider: steps_slider
    text_prompt: text_prompt
    text_negative_prompt: text_negative_prompt
    width_text: width_text
    height_text: height_text
    highres_checkbox: highres_checkbox
    sampler_button: sampler_button

    spacing:3
    padding:3
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: text_prompt
        TextInput:
            id: text_negative_prompt
    StackLayout:
        TextSlider:
            id: steps_slider
            title: "Steps:"
            min_value: 1
            max_value: 40
            value: 20
        TextSlider:
            id: cfg_slider
            title: "Cfg scale:"
            min_value: 1
            max_value: 20
            value: 4.5
        Button: #sampler_name
            id: sampler_button
            size: 100, 30
            size_hint: None, None
            text: 'Euler a'
        FloatText: #width
            id: width_text
            size: 60, self.minimum_height
            size_hint: None, None
            text: '1024'
            allow_decimal: False
        FloatText: #height
            id: height_text
            size: 60, self.minimum_height
            size_hint: None, None
            text: '768'
            allow_decimal: False
        CheckBox: #enable hi res
            id: highres_checkbox
            height: 40
            size_hint: None, None
            text: 'height'
        FloatText: #hr scale
            height: self.minimum_height
            size_hint: None, None
            text: '2'

    Button:
        size_hint: None, None
        width: 160
        height: 45

        on_release: root.on_generate_press()
        text: 'Generate'
