#:kivy 2.3.1
#:include Common.kv
#:include Generation.kv
#:include Styles.kv

<Logs>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Logs\nBe\nHere"
        valign: 'bottom'

<RunnerGui>:    
    BoxLayout: 
        canvas.before:
            Color:
                rgba: 0.4, 0.4, 0.4, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: 3
        spacing: 3
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 3
            BasePanel:
                width: 200
            BasePanel:
                size_hint_x: None
                width: 200

        GenerationPanel:

<AppRoot>:
    RunnerGui:
        name: "Runner gui screen"
    Logs:
        name: "Logs screen"