<BasePanel@Widget>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

<StyledBoxLayout@BoxLayout>:
    spacing:3
    padding:3
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

<FloatText@TextInput>
    multiline: False

<TextSlider@BoxLayout>
    title: 'Title:'
    min_value: 0
    max_value: 100
    value: 0

    #Exposing children
    slider: slider
    text_input: text_input

    orientation: 'horizontal'
    height: self.minimum_height
    size_hint_y: None
    Label:
        text: root.title
        size: 100, 40
        size_hint_x: None
    Slider:
        id: slider
        height: 40
        value: root.value
        on_value: root.on_slider_value(self.value)
        size_hint_y: None
        min: root.min_value
        max: root.max_value
    FloatText:
        id: text_input
        multiline: False
        allow_decimal: True
        on_text: root.on_text_changed(self.text)
        size: 100, self.minimum_height
        size_hint: None, None
